<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="framgia.vn.photoSketch">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="framgia.vn.photoSketch.activity.ChoosePhotoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="framgia.vn.photoSketch.activity.PhotoActivity"
            android:label="@string/title_activity_photo"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="framgia.vn.photoSketch.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>
        <activity android:name="framgia.vn.photoSketch.activity.MakeVideoActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="framgia.vn.photoSketch.activity.GalleryActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1164278090263632"
            android:exported="true" />

        <activity
            android:name="framgia.vn.photoSketch.activity.CombinePhotoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="framgia.vn.photoSketch.activity.ListImageActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
